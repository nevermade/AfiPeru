<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/close_scorevolunteer"
            android:layout_margin="8dp"
            android:text="X"
            android:textAppearance="@style/text_appearance_large_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:text="Fernado Banda"
            android:textAppearance="@style/text_appearance_large_light"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:text="Enviar"
            android:layout_alignParentRight="true"
            android:textAppearance="@style/text_appearance_medium_dark_soft"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/main_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star1"
                android:layout_toLeftOf="@+id/star2"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_star_empty"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/star2"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/star3"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_star_empty"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star3"

                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_star_empty"
                android:text="Enviar"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star4"
                android:layout_toRightOf="@+id/star3"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_star_empty"
                android:text="X"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star5"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/star4"
                android:src="@drawable/ic_star_empty"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <EditText
            android:id="@+id/launch_codes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Ingrese un comentario"
            android:gravity="top"
            />

    </LinearLayout>


</RelativeLayout>