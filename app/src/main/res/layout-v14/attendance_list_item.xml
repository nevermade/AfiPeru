<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_small">
    <ImageView
        android:id="@+id/attendance_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_small"/>
    <TextView
        android:id="@+id/attendance_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/attendance_item_icon"
        android:layout_centerVertical="true"
        android:text="Manuel Chumpitaz"
        android:textAppearance="@style/text_appearance_large_dark"
        android:singleLine="true"
        android:layout_marginRight="25dp"/>
    <!--'marginRight' logra que el texto no se dibuje encima del Switch-->
    <Switch
        android:id="@+id/attendance_item_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>