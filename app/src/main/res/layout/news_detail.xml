<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_medium">
            <ImageView
                android:id="@+id/news_detail_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/news_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:text="Paseo pinoteco al parque de las leyendas"
                android:textAppearance="@style/text_appearance_giant_dark"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_detail_title"
                android:layout_marginTop="@dimen/margin_tiny">
                <TextView
                    android:id="@+id/news_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Hace 10 minutos"
                    android:textAppearance="@style/text_appearance_small_dark_soft"
                    android:singleLine="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_camera"/>
                    <TextView
                        android:id="@+id/news_detail_number_pics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textAppearance="@style/text_appearance_medium_dark_soft"
                        android:singleLine="true"/>
                </LinearLayout>
                <!--ImageView
                    android:id="@+id/news_detail_author_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_small"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/news_detail_author_icon"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/news_detail_author_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manuel Chumpitaz"
                        android:textAppearance="@style/text_appearance_large_dark_soft"
                        android:singleLine="true"
                        android:layout_marginRight="25dp"/>
                    <TextView
                        android:id="@+id/news_detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hace 10 minutos"
                        android:textAppearance="@style/text_appearance_medium_dark_soft"
                        android:singleLine="true"/>
                </LinearLayout-->
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_view_divider"
                android:layout_marginTop="@dimen/margin_small"/>
            <TextView
                android:id="@+id/news_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                android:textAppearance="@style/text_appearance_article"
                android:text="@string/article_example"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>