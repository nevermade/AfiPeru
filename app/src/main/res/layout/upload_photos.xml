<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/photo_pic"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:alpha="0.15"
            android:src="@drawable/no_photo"/>
        <TextView
            android:id="@+id/no_photo_text"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/photo_pic"
            android:layout_alignBottom="@id/photo_pic"
            android:gravity="center"
            android:textAppearance="@style/text_appearance_medium_dark"
            android:text="@string/no_photo_message"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft  ="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight  ="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/send_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_big_send_soft"/>
            <TextView
                android:id="@+id/send_icon_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/send_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:textAppearance="@style/text_appearance_giant_dark"
                android:textColor="@color/list_view_divider"
                android:text="@string/upload_photos_button"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>