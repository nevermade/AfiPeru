<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/payments_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <TextView android:id="@+id/payment_item_expirationDate"
            style="@style/table_payment_items"
            android:text="Vence"/>
        <TextView android:id="@+id/payment_item_mount"
            style="@style/table_payment_items"
            android:text="Monto"/>
        <TextView android:id="@+id/payment_item_state"
            style="@style/table_payment_items"
            android:text="Estado"/>
        <TextView android:id="@+id/payment_item_none"
            style="@style/table_payment_items"
            android:text="-"
            android:visibility="gone"/>
        <Button android:id="@+id/payment_item_action"
            android:background="@drawable/pay_button"
            android:textColor="#FFFF"
            style="@style/table_payment_items"
            android:layout_height="33dp"
            android:text="@string/payment_btn"/>

    </LinearLayout>

</RelativeLayout>



