<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">
    <LinearLayout
        android:id="@+id/comments_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_top">

        <TextView
            android:id="@+id/comments_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="                      Julio Castilllo"
            android:textAppearance="@style/text_appearance_large_dark"
            />
        <TextView
            android:id="@+id/comments_subheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="    Genero:                  Edad:              Sesiones:"
            android:textAppearance="@style/text_appearance_medium_dark_soft"

            />
        <TextView
            android:id="@+id/comments_kid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="  Masculino                 2 aÃ±os                    12"
            android:textAppearance="@style/text_appearance_medium_dark_soft"

            />
        <TextView
            android:id="@+id/comments_subtittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="\n                       Comentarios:"
            android:textAppearance="@style/text_appearance_large_dark"

            />

    </LinearLayout>

    <ListView
        android:id="@+id/comments_list"
        android:layout_alignParentBottom="@id/comments_header"
        android:layout_width="wrap_content"
        android:layout_below="@id/comments_header"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/empty_comments_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comments_none"
        android:textSize="19sp"
        android:visibility="gone"/>
</RelativeLayout>