<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_small">
    <LinearLayout
        android:id="@+id/kids_item_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/kids_item_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Nombre del niño"
            android:textAppearance="@style/text_appearance_large_dark"
            android:singleLine="true"
            android:layout_marginRight="25dp"/>
        <TextView
            android:id="@+id/kids_item_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/kids_item_name"
            android:text="5 años"
            android:textAppearance="@style/text_appearance_medium_dark_soft"
            android:singleLine="true"
            android:layout_marginRight="25dp"/>
    </LinearLayout>
</RelativeLayout>