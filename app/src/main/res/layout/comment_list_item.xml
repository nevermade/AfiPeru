<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_tiny">
    <ImageView
        android:id="@+id/comments_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_centerVertical="true"
        android:src="@drawable/happy"/>
    <LinearLayout
        android:id="@+id/comments_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comments_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del autor"
            android:textAppearance="@style/text_appearance_large_dark"
            />
        <TextView
            android:id="@+id/comments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentario blabla"
            android:textAppearance="@style/text_appearance_medium_dark_soft"
            />
    </LinearLayout>
</RelativeLayout>