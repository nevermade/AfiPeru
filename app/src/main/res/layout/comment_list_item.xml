<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">



    <LinearLayout
        android:id="@+id/comments_item_text"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comments_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Nombre del nino"
            android:textAppearance="@style/text_appearance_medium_dark"
            />
        <TextView
            android:id="@+id/comments_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/comments_item_name"
            android:text="Comentario blabla"
            android:textAppearance="@style/text_appearance_medium_dark_soft"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/comments_item_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="DialogClick"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/happy"/>


</RelativeLayout>