<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/status_bar</item>
    </style>

    <style name="toolbar_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="edit_text">
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:colorControlNormal" tools:targetApi="21">@color/edit_text_underline_normal</item>
        <item name="android:colorControlActivated" tools:targetApi="21">@color/edit_text_underline_highlight</item>
        <item name="android:colorControlHighlight" tools:targetApi="21">@color/edit_text_underline_highlight</item>
    </style>

    <style name="text_appearance_giant_dark">
        <item name="android:textSize">@dimen/text_size_giant</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="text_appearance_large_dark">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="text_appearance_large_dark_soft">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dark_soft_text</item>
    </style>
    <style name="text_appearance_large_light">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/light_text</item>
    </style>
    <style name="text_appearance_medium_dark">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="text_appearance_medium_dark_soft">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/dark_soft_text</item>
    </style>
    <style name="text_appearance_medium_light">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/light_text</item>
    </style>
    <style name="text_appearance_small_dark">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>
    <style name="text_appearance_small_dark_soft">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/dark_soft_text</item>
    </style>
    <style name="text_appearance_small_light">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/light_text</item>
    </style>
    <style name="text_appearance_article">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>
